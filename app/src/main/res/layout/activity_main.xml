<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Your existing layout components go here -->

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Investment:"/>

            <EditText
                android:id="@+id/editInitialInvestment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Initial Investment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Contribution:"/>

            <EditText
                android:id="@+id/editMonthlyContribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Monthly Contribution"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Years:"/>

            <EditText
                android:id="@+id/editYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Number of Years"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Rate:"/>

            <EditText
                android:id="@+id/editInterestRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Interest Rate"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/tvTotalContribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="Total Contribution: " />

            <TextView
                android:id="@+id/tvFutureValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Future Value: "
                android:layout_columnSpan="2" />

            <TextView
                android:id="@+id/tvTotalInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Interest: "
                android:layout_columnSpan="2" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3">

                <TextView
                    android:id="@+id/tvMonthlyContribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1" />
    <!--                android:text="Monthly Values: " -->

                <TextView
                    android:id="@+id/tvMonthlyValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1" />
    <!--                android:text="Monthly Values: " -->

                <TextView
                    android:id="@+id/tvTempTotalInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1" />
    <!--                android:text="Monthly Values: " -->

            </GridLayout>
        </GridLayout>


    </LinearLayout>
</ScrollView>
